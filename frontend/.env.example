# Grantha Frontend Environment Variables
# Copy this file to .env.local and update the values

# API Configuration
PUBLIC_API_BASE_URL=http://localhost:8000/api
PUBLIC_WS_URL=ws://localhost:8000/ws

# Application Configuration
PUBLIC_APP_NAME=Grantha
PUBLIC_APP_VERSION=1.0.0
PUBLIC_APP_DESCRIPTION="Advanced AI Platform for Documentation, Chat, and Research"

# Feature Flags
PUBLIC_ENABLE_AGENTS=true
PUBLIC_ENABLE_RESEARCH=true
PUBLIC_ENABLE_WIKI=true
PUBLIC_ENABLE_SIMPLE=true

# Analytics (Optional)
PUBLIC_ANALYTICS_ID=
PUBLIC_SENTRY_DSN=

# Development Settings
NODE_ENV=development
VITE_LOG_LEVEL=info

# Build Configuration
BUILD_TIME=
BUILD_COMMIT_SHA=