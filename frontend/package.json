{
  "name": "grantha-frontend",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite dev --host --port 3000",
    "dev:legacy": "vite dev --host --port 5173",
    "build": "vite build",
    "preview": "vite preview --port 3000",
    "start": "node build/index.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf node_modules .svelte-kit dist",
    "postinstall": "svelte-kit sync",
    "unified:dev": "cd .. && pnpm run dev",
    "unified:build": "cd .. && pnpm run build",
    "unified:start": "cd .. && pnpm run start",
    "validate": "pnpm run check && pnpm run lint && pnpm run test && pnpm run build"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.2.5",
    "@sveltejs/kit": "^2.6.4",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/svelte": "^4.0.5",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.8.4",
    "@vitest/coverage-v8": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.1",
    "globals": "^15.11.0",
    "jsdom": "^23.0.1",
    "picomatch": "^4.0.2",
    "postcss": "^8.4.48",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "svelte": "^5.1.9",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.10",
    "vitest": "^2.1.2"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "bits-ui": "^2.9.4",
    "clsx": "^2.1.1",
    "embla-carousel-svelte": "^8.3.0",
    "formsnap": "^2.0.1",
    "lucide-svelte": "^0.541.0",
    "mode-watcher": "^1.0.0",
    "paneforge": "^1.0.2",
    "svelte-sonner": "^1.0.5",
    "sveltekit-superforms": "^2.19.1",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1",
    "zod": "^3.23.8"
  }
}