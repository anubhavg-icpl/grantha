# Grantha Unified Environment Configuration
# Copy this file to .env and update the values

# ================================
# AI Providers Configuration
# ================================

# Core AI Providers (at least one required)
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional AI Providers
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your_deployment_name

AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

DASHSCOPE_API_KEY=your_dashscope_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ================================
# Server Configuration
# ================================

# Backend API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_RELOAD=true

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0

# Base URLs for cross-service communication
SERVER_BASE_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api
WS_URL=ws://localhost:8000/ws

# Environment
NODE_ENV=development
PYTHON_ENV=development

# ================================
# Application Configuration
# ================================

# Application Metadata
APP_NAME=Grantha
APP_VERSION=1.0.0
APP_DESCRIPTION="Advanced AI Platform for Documentation, Chat, and Research"

# Authentication & Security
GRANTHA_AUTH_MODE=false
GRANTHA_AUTH_CODE=
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# ================================
# Feature Flags
# ================================

ENABLE_AGENTS=true
ENABLE_RESEARCH=true
ENABLE_WIKI=true
ENABLE_SIMPLE=true
ENABLE_CHAT=true

# ================================
# Database Configuration
# ================================

# Database settings (if applicable)
DATABASE_URL=sqlite:///./grantha.db
DATABASE_POOL_SIZE=5

# ================================
# Logging & Monitoring
# ================================

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/grantha.log

# Analytics (Optional)
ANALYTICS_ID=
SENTRY_DSN=

# MLflow tracking (Optional)
MLFLOW_TRACKING_URI=http://localhost:5000

# ================================
# AI Model Configuration
# ================================

DEFAULT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002

# ================================
# Build & Development
# ================================

# Build configuration
BUILD_TIME=
BUILD_COMMIT_SHA=
BUILD_VERSION=1.0.0

# Development settings
VITE_LOG_LEVEL=info
DEBUG=false